<div class="container">
  <div class="row">
    <div class="col s10 push-s1 teal lighten-5 z-depth-1">
      <h3 class="left uppercase">Cambia<br>abbonamento</h3>
      <p class="right grey-text text-darken-1">
        <em>
          Aggiorna l'attuale abbonamento<br>
          con l'abbonamento pi√π adatto a te.
        </em>
      </p>
    </div>
  </div>
  <div class="row section">
    <div class="col s12 m6 l6">
      <%= render :partial => 'plans' %>
    </div>
    <div class="col s12 m6 l6 blue lighten-5 center-align z-depth-2">
      <h3>Piano attuale</h3>
      <%= @account.stripe_plan_id.nil? ? '<h4 class="red-text">nessun abbonamento sottoscritto</h4>'.html_safe : '<h1 class="blue-text">'.html_safe + @account.stripe_plan_id + '</h1>'.html_safe %>
      <div class="row col s12 center-align">
        <h6>Seleziona un nuovo abbonamento</h6>
      </div>
      <%= form_tag '/subscriptions' do %>
          <span class="payment-errors error"></span>
          <div class="row center-align">
            <div class="col s12 m8 push-m2 l8 push-l2">
              <%= collection_select :plan, :stripe_id, @plans, :stripe_id, :name, {}, {} %>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12">
              <button class="btn btn-large orange" type="submit">Aggiorna abbonamento</button>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>