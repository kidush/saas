<div class="card z-depth-2">
  <div class="card-image">
    <%= image_tag('creditcard.jpg', class: 'responsive-img') %>
    <span class="card-title orange-text bold uppercase">Carta di credito</span>
  </div>
  <%= form_tag '/subscriptions', id: 'payment-form' do %>
      <div class="card-content">
        <div class="row">
          <div class="col s12">
            <label for="plan">Abbonamento</label>
            <%= collection_select :plan, :stripe_id, @plans, :stripe_id, :name, {}, {} %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <label for="creditcard">Numero Carta</label>
            <input id="creditcard" type="text" data-stripe="number"/>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s3">
            <label for="cvc">CVC</label>
            <input id="cvc" type="text" data-stripe="cvc"/>
          </div>
          <div class="input-field col s3">
            <label for="month">Mese</label>
            <input id="month" type="text" data-stripe="exp-month"/>
          </div>
          <div class="input-field col s6">
            <label for="year">Anno</label>
            <input id="year" type="text" size="4" data-stripe="exp-year"/>
          </div>
        </div>
      </div>
      <div class="card-action">
        <div class="row">
          <div class="col s12 center-align">
            <button type="submit" class="btn btn-large green">Registra carta</button>
          </div>
        </div>
      </div>
  <% end %>
</div>

<script type="text/javascript">
